/* alice.select 样式模块 */

// mixin
linear-gradient(from, to)
  background -webkit-linear-gradient(top, from, to)
  background -moz-linear-gradient(top, from, to)
  filter unquote('progid:DXImageTransform.Microsoft.Gradient(startColorstr=' + from + ', endColorstr=' + to + ')')

// reset link
.ui-select a,
.ui-select-trigger
  color: #7D7D7D
  font-size: 14px
  text-decoration: none
  &:hover
    text-decoration: none

// overlay
.ui-select
  display: inline-block
  *display: inline
  *zoom: 1
  background: #fff
  color: #7D7D7D
  font-size: 14px

.ui-select-content
  margin: -1px 0 0
  padding: 0
  overflow: auto
  height: 100%
  list-style: none
  border: 1px solid #CCCCCC
  _float: left
  ul
    list-style: none
    padding: 0
    margin: 0

.ui-select-item
  display: block
  padding: 10px 15px
  cursor: pointer
  overflow: hidden
  white-space: nowrap

.ui-select-item:hover,
.ui-select-item-hover
  background: #F2F2F2

.ui-select-item-disabled
.ui-select-item-disabled a
  cursor: not-allowed
  color: #ccc
  &:hover
    background: #fff

// trigger
.ui-select-trigger
  position: relative
  display:inline-block
  *display: inline
  *zoom: 1
  border: 1px solid #CCCCCC
  height: 30px
  line-height: 30px
  text-indent: 15px
  linear-gradient(#FBFBFB, #F3F3F3)
  i
    position: absolute
    top: 0px
    right: 15px
    line-height: 28px
    text-indent: 0
    font-size: 14px
    cursor: pointer
  &:hover
    border: 1px solid #999999

// 外面有一层容器，需要撑满
.ui-select .ui-select-trigger
  display: block

.ui-select-disabled
.ui-select .ui-select-disabled
  color: #aaa
  cursor: not-allowed
